package model;

import greenfoot.World;
import control.Car;
import control.Curb;

public class TestWorld extends World{
	
	public static int worldWidth = 1500;
	public static int worldHeight = 800;
	public static int cellSize = 1;
	public static int numberOfRoads = 4;
	
	public TestWorld() {
		super(worldWidth, worldHeight, cellSize);
		Car car = new Car();
		this.addObject(car, car.getStartXPos(), car.getStartYPos());
		for(int x = 0; x < numberOfRoads; x++){
			this.addObject(new Curb(100), 400, worldHeight/numberOfRoads * x);
		}
	}
	
	
	public void addRoads(){
		
	}
}
