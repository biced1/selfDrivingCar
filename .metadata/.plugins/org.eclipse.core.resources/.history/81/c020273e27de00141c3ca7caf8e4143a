package control;

import java.awt.Color;

import greenfoot.Actor;
import greenfoot.GreenfootImage;

public class Road extends Actor{
	private static final int roadWidth = 150;
	
	public Road(int roadLength) {
		GreenfootImage curbImg = new GreenfootImage(roadLength, getRoadWidth());
		curbImg.setColor(new Color(0, 0, 0));
		curbImg.fill();
		this.setImage(curbImg);
	}

	public static int getRoadWidth() {
		return roadWidth;
	}
}
