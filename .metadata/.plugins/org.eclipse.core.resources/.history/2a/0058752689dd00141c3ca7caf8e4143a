package control;

import greenfoot.Actor;
import greenfoot.Greenfoot;

public class Car extends Actor {
	private int speed = 0;
	private int counter = 0;
	private final int counterTime = 10;
	private final int topSpeed = 10;

	public Car() {
		super();
		this.setImage("images/regular/blueCar.png");
		System.out.println(this.getImage().getHeight());
		System.out.println(this.getImage().getWidth());
		this.getImage().scale(this.getImage().getWidth() / 2,
				this.getImage().getHeight() / 2);

	}

	@Override
	public void act() {
		if (counter == counterTime)
			counter = 0;
		counter++;
		if (Greenfoot.isKeyDown("a") || Greenfoot.isKeyDown("A")) {
			this.move(speed);
			this.turn(-speed);
		} else if (Greenfoot.isKeyDown("s") || Greenfoot.isKeyDown("S")) {
			if (speed > -topSpeed)
				speed--;
			this.move(speed);
		} else if (Greenfoot.isKeyDown("d") || Greenfoot.isKeyDown("D")) {
			this.move(speed);
			this.turn(speed);
		} else if (Greenfoot.isKeyDown("w") || Greenfoot.isKeyDown("W")) {
			if (speed < topSpeed)
				speed++;
			this.move(speed);
		} else {
			if (speed > 0 && counter == counterTime)
				speed--;
			else if (speed < 0 && counter == counterTime)
				speed++;
			this.move(speed);
		}
	}
}
