package control;

import greenfoot.Actor;
import greenfoot.Greenfoot;

public class Car extends Actor {

	public Car() {
		super();
		this.setImage("images/regular/blueCar.png");
	}

	@Override
	public void act() {
		if (!this.isAtEdge()) {
			if(Greenfoot.isKeyDown("KEY_LEFT"))
			this.setLocation(this.getX(), this.getY() + 1);
			System.out.println(this.getRotation());
			if(this.getRotation() < 91){ 
				this.turn(2);
			}
		}
	}
}
