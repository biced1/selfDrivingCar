package control;

import greenfoot.Actor;
import greenfoot.GreenfootImage;

public class Road extends Actor{
	private static final int roadWidth = 120;
	
	public Road(int roadLength) {
		GreenfootImage roadImg = new GreenfootImage("images/road.jpg");
		roadImg.rotate(90);
		roadImg.scale(roadLength, roadWidth);
		this.setImage(roadImg);
	}

	public static int getRoadWidth() {
		return roadWidth;
	}
}
