package model;

import greenfoot.World;
import control.Car;
import control.Curb;
import control.Road;

public class TestWorld extends World{
	
	public static int worldWidth = 1500;
	public static int worldHeight = 800;
	public static int cellSize = 1;
	public static int numberOfRoads = 4;
	public static int roadOffset = 50;
	
	public TestWorld() {
		super(worldWidth, worldHeight, cellSize);
		addRoads();
		addCar(100, 100);

	}
	
	
	public void addRoads(){
		for(int x = 0; x < numberOfRoads; x++){
			int roadSegmentWidth = 200;
			this.addObject(new Curb(roadSegmentWidth), roadSegmentWidth/2, (worldHeight/numberOfRoads * x) + roadOffset + Curb.getCurbWidth()/2);
			this.addObject(new Road(roadSegmentWidth), roadSegmentWidth/2, (worldHeight/numberOfRoads * x) + roadOffset + Curb.getCurbWidth() + Road.getRoadWidth()/2);
			this.addObject(new Curb(roadSegmentWidth), roadSegmentWidth/2, (worldHeight/numberOfRoads * x) + roadOffset + Curb.getCurbWidth() + Road.getRoadWidth());
			
		}
	}
	
	public void addCar(int startXPos, int startYPos){
		Car car = new Car();
		this.addObject(car, startXPos, startYPos);
	}
}
